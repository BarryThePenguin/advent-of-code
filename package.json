{
  "name": "adventofcode",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src",
  "type": "module",
  "scripts": {
    "build": "tsc --build --clean && tsc --build",
		"build:watch": "tsc --build --watch",
    "pretest": "npm run build",
    "test": "xo && c8 ava",
		"test:watch": "ava --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BarryThePenguin/advent-of-code.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BarryThePenguin/advent-of-code/issues"
  },
  "homepage": "https://github.com/BarryThePenguin/advent-of-code#readme",
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@fast-check/ava": "^1.2.1",
    "@tsconfig/node18": "^18.2.2",
    "ava": "6.1.1",
    "c8": "^8.0.1",
    "plop": "^4.0.0",
    "typescript": "^5.3.3",
    "xo": "^0.56.0"
  },
  "ava": {
    "typescript": {
      "compile": false,
      "rewritePaths": {
        "src/": "dist/"
      }
    }
  },
  "xo": {
    "ignores": [
      "plop-templates"
    ],
    "prettier": true,
    "rules": {
      "ava/no-skip-test": "warn"
    }
  }
}
